# choose the character set.
OPTIONS=symset:DECGraphics,roguesymset:RogueEpyx

# show color
OPTIONS=color

# use vi-key controls
OPTIONS=number_pad:0

# show out-of-sight areas of lit rooms
OPTIONS=dark_room, lit_corridor


# autopickup configurations
OPTIONS=autopickup
OPTIONS=pickup_types:$


# assorted display configurations
OPTIONS=hitpointbar
OPTIONS=showexp
OPTIONS=showscore
OPTIONS=time

OPTIONS=msg_window:reversed

# show highscore configuration
OPTIONS=scores:10 top/2 around/o


# use colored menus (regex allowed)
OPTIONS=menucolors
MENUCOLOR=" blessed "=green
MENUCOLOR=" holy "=green
MENUCOLOR=" cursed "=red
MENUCOLOR=" unholy "=red
MENUCOLOR=" cursed .* (being worn)"=orange&underline


