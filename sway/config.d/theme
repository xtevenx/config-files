# Apply gtk theming
exec_always ~/.config/sway/scripts/import-gsettings

# Apply additional sway cursor theme
seat seat0 xcursor_theme Catppuccin-Mocha-Dark-Cursors 24

# Set inner/outer gaps
gaps inner 3
gaps outer 2

# Hide titlebar on windows
default_border pixel 1

# Default Font
font pango:Inter 10

# No border when only one window
smart_borders on

# Set wallpaper
exec swaybg -i ~/.config/sway/sway.jpg

# Title format for windows
for_window [shell="xdg_shell"] title_format "%title (%app_id)"
for_window [shell="x_wayland"] title_format "%class - %title"

# Set colours
set $rosewa #f5e0dc
set $flamin #f2cdcd
set $pink   #f5c2e7
set $mauve  #cba6f7
set $red    #f38ba8
set $maroon #eba0ac
set $peach  #fab387
set $yellow #f9e2af
set $green  #a6e3a1
set $teal   #94e2d5
set $sapphi #74c7ec
set $blue   #89b4fa
set $lavend #b4befe
set $text   #cdd6f4
set $subtx1 #bac2de
set $subtx0 #a6adc8
set $overl2 #9399b2
set $overl1 #7f849c
set $overl0 #6c7086
set $surfa2 #585b70
set $surfa1 #45474a
set $surfa0 #313244
set $base   #1e1e2e
set $mantle #181825
set $crust  #11111b

set $background-color $base
set $text-color $text
set $selection-color $surfa2
set $accent-color $blue

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $overl0 $blue   $crust  $overl0   $overl0
client.focused_inactive $base   $base   $text   $base     $base
client.unfocused        $base   $base   $text   $base     $base
client.urgent           $maroon $maroon $crust  $maroon   $maroon
client.background       $base

# Other color configuration
set $color0  $crust
set $color1  $base
set $color2  $overl0
set $color3  $overl1
set $color4  $overl2
set $color5  $subtx0
set $color6  $subtx1
set $color7  $text
set $color8  $red
set $color9  $peach
set $color10 $yellow
set $color11 $green
set $color12 $teal
set $color13 $blue
set $color14 $lavend
set $color15 $flamin

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    swaybar_command waybar
}
